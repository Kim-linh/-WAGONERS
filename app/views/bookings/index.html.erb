<div class="container">
  <h1 class="dashboard"> Ton Dashboard 😎</h1>
  <h5 class="description">Tu trouveras ci-dessous tous tes petits rendez-vous galants :</h5>
  <div class="flash flash-success alert alert-dismissible fade show" role="alert">
    <% if @bookings.any? %>
      <span><strong>Yay!</strong> 🎉 Vous avez loué <%= @bookings.last.wagoner.github_name %></span>
      <a data-dismiss="alert" aria-label="Close">
        <i class="fas fa-times"></i>
      </a>
      <% else %>
        <p>Tu n'as aucun petits rendez-vous, book en un ! 😍</p>
      <% end %>
  </div>

  <div>
    <% @bookings.each do |booking| %>
      <div>
        <div class="notification">
          <%= cl_image_tag(booking.wagoner.avatar, width:100)%>
          <div class="notification-content">
            <p><small><%= booking.wagoner.github_name %></small></p>
            <p>Réservation du <%= booking.start_at %> au <%= booking.end_at %></p>
          </div>

          <!-- <div class="notification-actions">
            <a href="#">Delete <i class="far fa-trash-alt"></i></a>
          </div> -->
        </div>
      </div>
    <% end %>
  </div>

  <div>
    <%= link_to "Retourner à l'accueil", root_path, class: 'card-link btn btn-primary' %>
  </div>

</div>
