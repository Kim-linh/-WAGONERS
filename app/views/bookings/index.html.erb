<div class="container">
  <h1 class="dashboard"> Ton Dashboard 😎</h1>
  <h5 class="description">Tu trouveras,ci-dessous tous tes petits rendez-vous gallants :</h5>
  <div class="flash flash-success alert alert-dismissible fade show" role="alert">
    <span><strong>Yay!</strong> 🎉 vous avez loué <%= @bookings.last.wagoner.github_name %></span>
    <a data-dismiss="alert" aria-label="Close">
      <i class="fas fa-times"></i>
    </a>
  </div>

  <div class="row mt-5">
    <% @bookings.each do |booking| %>
      <div class="col-4">
        <!-- <p class="name_wagoner"><%= booking.wagoner.github_name %></p> -->

        <!-- Element card -->

          <div class="card" style="width: 18rem;">
            <div class="card-image-height">
              <%= cl_image_tag(booking.wagoner.avatar) %>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= booking.wagoner.github_name %></h5>
              <p class="card-text">
                Réservation du <%= booking.start_at %> au <%= booking.end_at %>
                <!-- utilise strftime -->
              </p>
              <%= link_to "voir le detail", wagoner_path(booking.wagoner), class: 'card-link btn btn-primary' %>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>
