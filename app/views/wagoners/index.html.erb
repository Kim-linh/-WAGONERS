<%= render 'shared/banner' %>
<div class="container">
  <div class="row">
    <% @wagoners.each do |wagoner| %>
      <div class="col-4 my-5">
        <!-- Element card -->

        <div class="card" style="width: 18rem;">
          <div class="card-image-height">
            <%= cl_image_tag(wagoner.avatar) %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= wagoner.github_name %></h5>
            <p class="card-text">
              <%= wagoner.description %>
            </p>
            <%= link_to "Plus de dÃ©tails", wagoner_path(wagoner), class: 'card-link btn btn-primary' %>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>

<div class= "container" >
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
