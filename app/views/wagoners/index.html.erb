<div class="container">
  <div class="row">
    <% @wagoners.each do |wagoner| %>
      <div class="col-4">
        <!-- Element card -->
        <div class="card" style="width: 18rem;">
          <img src="https://res.cloudinary.com/dvb6zudlf/image/upload/v1558537445/benoit_a5txll.png" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= wagoner.github_name %></h5>
            <p class="card-text">
              <%= wagoner.description %>
            </p>
            <%= link_to "voir le detail", wagoner_path(wagoner), class: 'card-link btn btn-primary' %>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>

<div class= "container" >
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key = "<%= ENV['MAPBOX_API_KEY'] %>"
></div>
</div>



