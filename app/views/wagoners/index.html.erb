<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= "https://images.pexels.com/photos/9816/pexels-photo-9816.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500" %>');">
  <div class="banner-content">
    <h1>Les wagoners </h1>
    <p>Awesome persons for company nightlife</p>
    <%#= link_to "Rent a wagoner", wagoners_show_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @wagoners.each do |wagoner| %>
      <div class="col-4">
        <!-- Element card -->
        <div class="card" style="width: 18rem;">
          <img src="..." class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= wagoner.github_name %></h5>
            <p class="card-text">
              <%= wagoner.description %>
            </p>
            <%= link_to "show", wagoner_path(wagoner), class: 'card-link btn btn-primary' %>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>






